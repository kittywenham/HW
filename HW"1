import random
sayı = random.randint(1,100)
while True:
    tahmin = int(input("Programın atadığı sayıyı tahmin ediniz:"))
    if tahmin < sayı :
        print("Daha büyük bir sayı giriniz.")
    elif tahmin > sayı :
        print("Daha küçük bir sayı giriniz.")
    elif tahmin == sayı :
        print("Tebrikler! Doğru bildiniz.")
        break
